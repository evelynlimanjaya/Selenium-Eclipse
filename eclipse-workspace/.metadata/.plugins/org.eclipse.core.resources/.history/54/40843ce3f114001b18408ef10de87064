	public static void main(String[] args) throws InterruptedException {
		WebDriver driver=new ChromeDriver();
//		WebDriverWait wait=new WebDriverWait(driver,10);
		String baseUrl="https://www.seriouseats.com/";
//		wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("(//*[@class='icon icon-search-glass'])[2]")));
//		WebElement myElement=driver.findElement(By.xpath("(//*[@class='icon icon-search-glass'])[2]"));
		
		
		driver.get(baseUrl);
		driver.manage().window().maximize();
//		myElement.click();
